panel-base() {
  display: block
  position: relative
  text-align: left
  background: rgba(255,255,255,0.7)
  box-shadow: 0 2px 5px 0 rgba(0,0,0,0.16),
              0 2px 10px 0 rgba(0,0,0,0.12),
              0px 2px 2px 0 rgba(255,255,255,0.4) inset
}

* {
  box-sizing: border-box
}

body, html {
  width: 100%
  height: 100%
  margin: 0
  padding: 0
  text-align: center
  background: #6d6d6d
}

body {
  box-shadow: 0 10px 10px 0 rgba(0,0,0,0.32) inset,
              0px 100px 50px 0 rgba(0,0,0,0.16) inset
}

header {
  color: #ededed
  padding: 48px
}

section {

  &.type-profile {
    padding: 96px
  }

  &.type-portfolio {
    position: relative
    height: 200px * 4
  }

}

h1 {
  font-size: 36px
  font-weight: 300
  margin: 0
}

.container {
  width: 1000px
}

.panel {
  panel-base()
  margin: auto
  padding: 24px
  width: 320px

  title() {
    display: block
    line-height: 1
    font-weight: 300
  }

  &.type-portfolio {
    position: absolute

    &:nth-child(2n-1) {
      left: 0
    }

    &:nth-child(2n) {
      right: 0
    }

    &:nth-child(1) { top: 100px }
    &:nth-child(2) { top: 250px }
    &:nth-child(3) { top: 400px }
    &:nth-child(4) { top: 550px }
  }

  .panel-title {
    title()
    padding-bottom: 6px
    font-size: 24px
  }

  .panel-subtitle {
    title()
    font-size: 18px
  }

  .panel-image {
    panel-base()
    position: absolute
    bottom: 90px
    right: 24px
    margin: 20px auto
    width: 100px
    background-color: #ffffff
    transform: rotate(1deg)

    & > img {
      display: block
      border-radius: 2px 2px 0 0
      position: relative
      left: 0
      right: 0
      top: 0
      bottom: 0
      width: 100%
    }
  }

  .panel-content {
    padding: 24px 0 0

    p {
      margin: 0
      font-size: 14px
    }
  }

  .panel-action {
    padding: 24px 0 0
    display: flex
    justify-content: center
  }

  .action-button {
    text-decoration: none
    box-shadow: none
    width: 80px
    background-color: transparent
    color: #343434
    border: none
    border-radius: 2px
    display: inline-block
    height: 36px
    line-height: 18px
    font-size: 14px
    text-align: center
    outline: 0
    margin: auto
    text-transform: uppercase
    vertical-align: middle
    -webkit-tap-highlight-color: transparent

    &:hover {
      color: #555555
    }

    & > i {
      display: block
      font-size: 18px
      text-align: center
    }
  }
}

line-decoration() {
  position: absolute
  border-radius: 5px
  border: 4px solid #ababab
}

.line-decoration {
  line-decoration()
  top: 0
  left: 0
  right: 0
  height: 100%
  margin: auto
  width: 12px

  .line-to-panel {
    line-decoration()
    width: 80px
    height: 12px

    &:nth-child(2n-1) {
      right: 48px
    }

    &:nth-child(2n) {
      left: 48px
    }

    &:nth-child(1) { top: 150px * 1 + 20px }
    &:nth-child(2) { top: 150px * 2 + 20px }
    &:nth-child(3) { top: 150px * 3 + 20px }
    &:nth-child(4) { top: 150px * 4 + 20px }
  }
}

footer {
  padding: 6px

  .copyright {
    color: rgba(0,0,0,0.5)
  }
}
