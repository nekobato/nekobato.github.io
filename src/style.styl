* {
  box-sizing: border-box;
}

body, html {
  width: 100%;
  height: 100%;
  text-align: center;
}

panel-base() {
  display: block;
  position: relative;
  text-align: left;
  box-shadow: 0 2px 5px 0 rgba(0,0,0,0.16),
              0 2px 10px 0 rgba(0,0,0,0.12),
              0px 2px 2px rgba(255,255,255,0.8) inset;
}

.exhibit-panel {
  // panel-base()
  margin: 20px auto;
  width: 200px;

  & > img {
    display: block;
    border-radius: 2px 2px 0 0;
    position: relative;
    left: 0;
    right: 0;
    top: 0;
    bottom: 0;
    width: 100%;
  }
}

.panel {
  panel-base();
  margin: auto;
  padding: 24px;
  width: 320px;
  box-shadow: 0 2px 5px 0 rgba(0,0,0,0.16),
              0 2px 10px 0 rgba(0,0,0,0.12),
              0px 2px 2px rgba(255,255,255,0.8) inset;

  title() {
    display: block;
    line-height: 1;
    font-weight: 300;
  }

  .panel-title {
    title()
    padding-bottom: 6px;
    font-size: 24px;
  }

  .panel-subtitle {
    title()
    font-size: 18px;
  }

  .panel-content {
    padding: 24px 0 0;

    p {
      margin: 0;
      font-size: 14px;
    }
  }

  .panel-action {
    padding: 24px 0 0;
    display: flex;
    justify-content: center;
  }

  .action-button {
    text-decoration: none;
    box-shadow: none;
    width: 80px;
    background-color: transparent;
    color: #343434;
    cursor: pointer;
    border: none;
    border-radius: 2px;
    display: inline-block;
    height: 36px;
    line-height: 18px;
    font-size: 14px;
    text-align: center;
    outline: 0;
    text-transform: uppercase;
    vertical-align: middle;
    -webkit-tap-highlight-color: transparent;

    &:hover {
      color: #555555;
    }

    & > i {
      display: block;
      font-size: 18px;
      text-align: center;
    }
  }
}

.copyright {
  color: rgba(0,0,0,0.5);
}
