panel-base() {
  display: block
  position: relative
  text-align: left
  background: rgba(255,255,255,0.7)
  box-shadow: 0 2px 5px 0 rgba(0,0,0,0.16),
              0 2px 10px 0 rgba(0,0,0,0.12),
              0px 2px 2px 0 rgba(255,255,255,0.4) inset
}

* {
  box-sizing: border-box
}

body, html {
  width: 100%
  min-height: 100%
  margin: 0
  padding: 0
  text-align: center
  background: #9d9d9d
}

body {
  box-shadow: 0 0 32px 0 rgba(0,0,0,0.24) inset,
              0 50px 100px 0 rgba(0,0,0,0.16) inset
}

header {
  panel-base()
  background: #000000
  color: #cdcdcd
  padding: 24px
  width: 480px
  margin: 0 auto
  text-align: center
}

section {

  &.type-profile {
    padding: 96px 0 48px
  }

  &.type-portfolio {
    position: relative
    height: 180px * 4
  }

}

h1 {
  font-size: 36px
  font-weight: 300
  margin: 0
}

.container {
  width: 1000px
}

.panel {
  panel-base()
  margin: auto
  padding: 24px
  width: 320px

  title() {
    display: block
    line-height: 1
    font-weight: 300
  }

  &.type-portfolio {
    position: absolute

    &:nth-child(2n-1) {
      left: 0
    }

    &:nth-child(2n) {
      right: 0
    }

    rowSize = 120px
    marginSize = 50px

    &:nth-child(1) { top: rowSize * 1 - marginSize }
    &:nth-child(2) { top: rowSize * 2 - marginSize }
    &:nth-child(3) { top: rowSize * 3 - marginSize }
    &:nth-child(4) { top: rowSize * 4 - marginSize }
  }

  .panel-title {
    title()
    padding-bottom: 6px
    font-size: 24px
  }

  .panel-subtitle {
    title()
    font-size: 18px
  }

  .panel-image {
    panel-base()
    position: absolute
    bottom: 90px
    right: 24px
    margin: 20px auto
    width: 100px
    background-color: #ffffff

    & > img {
      display: block
      border-radius: 2px 2px 0 0
      position: relative
      left: 0
      right: 0
      top: 0
      bottom: 0
      width: 100%
    }
  }

  .panel-content {
    padding: 24px 0 0

    p {
      margin: 0
      font-size: 14px
    }
  }

  .panel-action {
    padding: 24px 0 0
    display: flex
    justify-content: center
  }

  .action-button {
    text-decoration: none
    box-shadow: none
    width: 80px
    background-color: transparent
    color: #343434
    border: none
    border-radius: 2px
    display: inline-block
    height: 36px
    line-height: 18px
    font-size: 14px
    text-align: center
    outline: 0
    margin: auto
    text-transform: uppercase
    vertical-align: middle
    -webkit-tap-highlight-color: transparent

    &:hover {
      color: #555555
    }

    & > i {
      display: block
      font-size: 18px
      text-align: center
    }
  }
}

line-decoration() {
  position: absolute
  border: 1px solid #4d4d4d
}

.line-decoration {
  line-decoration()
  top: 0
  left: 0
  right: 0
  height: 100%
  margin: auto
  width: 1px

  .line-to-panel {
    line-decoration()
    width: 80px
    height: 1px

    &:nth-child(2n-1) {
      right: 48px
    }

    &:nth-child(2n) {
      left: 48px
    }

    rowSize = 120px
    marginSize = 20px

    &:nth-child(1) { top: rowSize * 1 + marginSize }
    &:nth-child(2) { top: rowSize * 2 + marginSize }
    &:nth-child(3) { top: rowSize * 3 + marginSize }
    &:nth-child(4) { top: rowSize * 4 + marginSize }
  }
}

footer {
  panel-base()
  background: #000000
  padding: 12px
  width: 480px
  margin: 0 auto
  text-align: center

  .copyright {
    color: #cdcdcd
  }
}
